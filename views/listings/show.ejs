<% layout("/layouts/boilerplate") %>
<div class="row">
    
    <div class="col-8 offset-2 mt-3">
    <body>
        
        <h3><%= listing.title %></h3>
        <div class="card col-12">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                
                <p class="card-text"><%= listing.description %></p>
            </div>
            
            <ul class="list-group list-group-flush">
                <li class="list-group-item">&#8377; <%= listing.price.toLocaleString("en-IN") %></li>
                <li class="list-group-item"><%= listing.location %></li>
                <li class="list-group-item"><%= listing.country %></li>
            </ul>

            <div class="card-body">
                <div class="row">
                    <div class="col-auto">
                        <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit</a>
                    </div>
                    <div class="col-auto">
                        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <div class="col-8 offset-3">
                        <h4>Leave a Review</h4>
                        <form>
                            <div>
                                <label for ="rating">Rating</label>
                                <input type="range" min="1" max="5" id="rating" name="review[rating]">
                            </div>
                            <div>
                                <label for ="comments">Comments</label>
                                <textarea name="review[comment]" id="comment" cols="30" rows="10"></textarea>
                            </div>
                            <button>Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
    </div>
</div>